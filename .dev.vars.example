# Cloudflare Workers Local Development Secrets
# Copy this file to .dev.vars and fill in your values
# NEVER commit .dev.vars to git!

# Database - Neon PostgreSQL (works directly with Cloudflare Workers)
DATABASE_URL="postgresql://user:password@host.neon.tech/dbname?sslmode=require"

# OpenAI API for AI features
OPENAI_API_KEY="sk-proj-your-openai-key"
AI_INTEGRATIONS_OPENAI_API_KEY="sk-proj-your-openai-key"

# Azure/Bing Grounding (optional fallback)
BING_GROUNDING_KEY="your-bing-key"

# OAuth Providers
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Service - Mailgun
MAILGUN_API_KEY="your-mailgun-api-key"
MAILGUN_DOMAIN="mg.yourdomain.com"
MAILGUN_FROM_EMAIL="no-reply@yourdomain.com"

# Session Security
SESSION_SECRET="generate-a-random-32-character-string"

# Push Notifications (VAPID)
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
